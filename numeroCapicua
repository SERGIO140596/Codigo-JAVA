package programa1;

/**
 *
 * @author SERGIO
 */
public class numeroCapicua {
    public static void main(String[]args){
        String num="1435341";
        String numInv="";
        int k = num.length();
        for(int i=k;i>0;i--){
            String newCad = num.substring(i-1,i);
            numInv+=newCad;    
        }
        if(num.equals(numInv)){
            System.out.println("El Numero es Capicua");
        }
        else{
            System.out.println("El numero no es Capicua");
        }
        
        
    }
}
